@page
@model E_Migrant.App.Presentacion.Pages.CrudMigrante.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Migrante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Migrante.Nombres" class="control-label"></label>
                <input asp-for="Migrante.Nombres" class="form-control" required/>
                <span asp-validation-for="Migrante.Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Migrante.Apellidos" class="control-label"></label>
                <input asp-for="Migrante.Apellidos" class="form-control" required/>
                <span asp-validation-for="Migrante.Apellidos" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Migrante.TipoDocumento" class="control-label"></label>
                <select asp-for="TiposID" class="form-control" asp-items="Model.listaTipos" onchange="getValue()" required>
                    <option>Seleccione un tipo doc</option>
                </select>
                <span asp-validation-for="Migrante.TipoDocumento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Migrante.NumeroDocumento" class="control-label"></label>
                <input asp-for="Migrante.NumeroDocumento" class="form-control" required/>
                <span asp-validation-for="Migrante.NumeroDocumento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Migrante.PaisOrigen" class="control-label"></label>
                <select asp-for="PaisID" class="form-control" asp-items="Model.listaPais" onchange="getValue()" required>
                    <option>Seleccione un Pais Origen</option>
                </select>
                <span asp-validation-for="Migrante.PaisOrigen" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Migrante.FechaNacimiento" class="control-label"></label>
                <input asp-for="Migrante.FechaNacimiento" class="form-control" required/>
                <span asp-validation-for="Migrante.FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Migrante.Email" class="control-label"></label>
                <input asp-for="Migrante.Email" class="form-control" />
                <span asp-validation-for="Migrante.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Migrante.NumeroTelefono" class="control-label"></label>
                <input asp-for="Migrante.NumeroTelefono" class="form-control" />
                <span asp-validation-for="Migrante.NumeroTelefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Migrante.DireccionActual" class="control-label"></label>
                <input asp-for="Migrante.DireccionActual" class="form-control" />
                <span asp-validation-for="Migrante.DireccionActual" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Migrante.Ciudad" class="control-label"></label>
                <select asp-for="CiudadID" class="form-control" asp-items="Model.listaCiudad" onchange="getValue()">
                    <option>Seleccione una ciudad</option>
                </select>
                <span asp-validation-for="Migrante.Ciudad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Migrante.SituacionLaboral" class="control-label"></label>
                <select asp-for="SituacionLaboralID" class="form-control" asp-items="Model.listaSituacionLaboral" onchange="getValue()">
                    <option>Seleccione una situacion laboral</option>
                </select>
                <span asp-validation-for="Migrante.SituacionLaboral" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Migrante.Usuario" class="control-label"></label>
                <input asp-for="Migrante.Usuario" class="form-control" />
                <span asp-validation-for="Migrante.Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Migrante.Contraseña" class="control-label"></label>
                <input type= "password" asp-for="Migrante.Contraseña" class="form-control" />
                <span asp-validation-for="Migrante.Contraseña" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
